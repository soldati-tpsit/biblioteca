        <Label Content="LIBRO" HorizontalAlignment="Left" Margin="497,177,0,0" VerticalAlignment="Top"/>
        <Label Content="Autore" HorizontalAlignment="Left" Margin="267,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTitoloLibroIns" HorizontalAlignment="Left" Margin="581,221,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
