        <TextBox x:Name="txtPagineLibroIns" HorizontalAlignment="Left" Margin="400,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"/>
        <Button x:Name="btnAggiungiLibro" Content="Aggiungi" HorizontalAlignment="Left" Margin="581,319,0,0" VerticalAlignment="Top" Click="btnAggiungiLibro_Click"/>
        <Separator HorizontalAlignment="Left" Margin="377,356,0,0" VerticalAlignment="Top" Height="12" Width="294"/>
        <Separator HorizontalAlignment="Left" Margin="377,161,0,0" VerticalAlignment="Top" Height="12" Width="294"/>
        <Label Content="Titolo" HorizontalAlignment="Left" Margin="300,390,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTitoloLibroCerca" HorizontalAlignment="Left" Margin="358,394,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCercaTitolo" Content="Cerca" HorizontalAlignment="Left" Margin="528,393,0,0" VerticalAlignment="Top" Click="btnCercaTitolo_Click"/>
        <Label Content="Autore" HorizontalAlignment="Left" Margin="300,435,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAutoreLibroCerca" HorizontalAlignment="Left" Margin="358,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCercaAutore" Content="Cerca" HorizontalAlignment="Left" Margin="528,442,0,0" VerticalAlignment="Top" Click="btnCercaAutore_Click"/>
        <Button x:Name="btnNumeroLibri" Content="Numero Libri" HorizontalAlignment="Left" Margin="657,420,0,0" VerticalAlignment="Top" Click="btnNumeroLibri_Click"/>

